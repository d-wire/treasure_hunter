<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FirstStartupActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:layout_gravity="left|top"
            android:src = "@drawable/wood_background"
            android:scaleType="fitXY" />

    </FrameLayout>

     <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Treasure Hunters!"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:textAlignment="center"
            android:typeface="serif"
         android:textColor="#fbf8f8" />



        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton3"
            android:onClick="selectIcon"
            android:src="@mipmap/profile_icon2"
            android:scaleType="fitXY"
            android:layout_below="@+id/textView3"
            android:layout_alignEnd="@+id/textView"
            android:background="@android:color/transparent"
            android:layout_gravity="right|center_vertical" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton2"
            android:onClick="selectIcon"
            android:src="@mipmap/profile_icon3"
            android:scaleType="fitXY"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton"
            android:onClick="selectIcon"
            android:src="@mipmap/profile_icon1"
            android:scaleType="fitXY"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:layout_gravity="left|center_vertical" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="saveToDB" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:hint="Username"
            android:textColorHint="#ffffff"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal|top"
            android:textColor="#ffffff"
            android:padding="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Profile Icon"
            android:id="@+id/textView3"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="#faf9f9"
            android:padding="30dp"/>

</RelativeLayout>
